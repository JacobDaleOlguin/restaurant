{
    "compilerOptions": {
      "outDir": "./dist/", // directs TypeScript to put the compiled JavaScript files into the ./dist/ directory
      "noImplicitAny": true, // maintains type safety
      "module": "es6", // latest JS verison
      "target": "es6", // what ts transforms into
      "jsx": "react",
      "allowJs": true,
      "allowSyntheticDefaultImports": true, // this allowed me to import React seems neccesary
      "moduleResolution":"node" // i guess i needed this for react-router-dom it doesnt seem like it should have worked but it did fix the error
    },
    "include": [
      "./src/**/*"
    ]
  }